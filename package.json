{
	"name": "steplauncher",
	"version": "1.0.0",
	"description": "Â¡El mejor launcher de Minecraft no premium!",
	"author": "NovaStepStudios <stepnicka012@gmail.com>",
	"main": "dist/App.js",
	"module": "launcher-app/App.ts",
	"type": "module",
	"private": true,
	"scripts": {
		"start": "electron .",
		"dev": "tsc && electron .",
		"build": "electron-builder",
		"build:win": "electron-builder --win",
		"build:linux": "electron-builder --linux",
		"build:mac": "electron-builder --mac"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"@types/discord-rpc": "^4.0.10",
		"@types/express": "^5.0.6",
		"@types/node": "^25.0.3",
		"electron": "^39.2.7",
		"electron-builder": "^26.4.0"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"discord-rpc": "^4.0.1",
		"express": "^5.2.1"
	},
	"build": {
		"appId": "com.novastep.steplauncher",
		"asar": false,
		"files": [
			"dist/**/*",
			"launcher-renderer/**/*",
			"package.json"
		],
		"directories": {
			"buildResources": "build",
			"output": "release"
		},
		"win": {
			"target": [
				{
					"target": "zip",
					"arch": ["x64"]
				}
			],
			"icon": "./launcher-renderer/Application/Resources/icon.ico"
		},
		"linux": {
			"target": ["AppImage"],
			"icon": "./launcher-renderer/Application/Resources/Icon.png",
			"category": "Game"
		},
		"mac": {
			"target": "dmg",
			"icon": "./launcher-renderer/Application/Resources/icon.icns"
		}
	}
}
